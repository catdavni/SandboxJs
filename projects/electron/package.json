{
  "name": "electron",
  "version": "1.0.0",
  "main": "./dist/main/index.js",
  "description": "",
  "scripts": {
    "buildMain": "webpack --config webpack.main.config.js",
    "buildRenderer": "webpack --config webpack.renderer.config.js",
    "buildPreload": "webpack --config webpack.preload.config.js",
    "build": "npm run buildMain && npm run buildRenderer && npm run buildPreload",
    "serveRenderer": "webpack serve --config webpack.renderer.config.js",
    "watchPreload": "webpack --config webpack.preload.config.js --watch",
    "startElectron": "electron-forge start -- --remote-debugging-port=9223",
    "watchMain": "webpack --config webpack.main.config.js --watch",
    "startMainWaitForDeps": "wait-on http://localhost:3333/ && npm run startElectron",
    "serve": "concurrently \"npm run watchPreload\" \"npm run serveRenderer\" \"npm run watchMain\" \"npm run startMainWaitForDeps\"",
    "start": "npm run serve"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/plugin-webpack": "^7.4.0",
    "css-loader": "^7.1.2",
    "electron": "^32.0.1",
    "style-loader": "^4.0.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "concurrently": "^9.0.1",
    "wait-on": "^8.0.1"
  }
}
